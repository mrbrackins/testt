        "fontWeight": "700",
        "fontSize": 25,
        "color": "#222222"
      },
      "constraints": {
        "fontSize": {
          "minimum": 20,
          "maximum": 40
        }
      }
    },
    "title": {
      "type": "object",
      "title": "Title",
      "format": "font",
      "default": {
        "fontWeight": "700",
        "color": "#3A3A3A"
