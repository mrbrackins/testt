{
  "title": "Rubicon Rose",
  "formats": {
    "font": {
      "default": {
        "fontFamily": "NotoSerif",
        "fontStyle": "normal",
        "fontWeight": "normal",
        "fontSize": 20,
        "color": "#222222"
      },
      "constraints": {
        "fontFamily": {
          "enum": [
            "Rubik-Regular",
            "NotoSans",
            "NotoSerif",
            "MuktaVaani-Regular"
          ]
        },
        "fontStyle": {
          "enum": ["normal", "italic"]
        },
        "fontWeight": {
          "enum": [
            "normal",
            "bold",
            "100",
            "200",
            "300",
            "400",
            "500",
            "600",
            "700",
            "800",
            "900"
          ]
        },
        "fontSize": {
          "minimum": 10,
          "maximum": 48
        }
      }
    },
    "dropdown": {
      "default": {
        "dropdownValue": "dark"
      },
      "constraints": {
        "dropdownValue": {
          "enum": ["light", "dark"]
        }
      }
    }
  },
  "properties": {
    "featuredColor": {
      "type": "string",
      "title": "Featured color - main color of the app",
      "format": "color",
      "default": "#FFFFFF"
